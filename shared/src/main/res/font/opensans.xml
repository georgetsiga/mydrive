<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- font weights conform to the CSS spec - https://www.w3.org/TR/css-fonts-3/#font-weight-numeric-values -->

    <!-- Normal light -->
    <font app:fontStyle="normal"
        app:font="@font/opensans_light"
        app:fontWeight="300"/>

    <!-- Normal regular -->
    <font app:fontStyle="normal"
        app:font="@font/opensans_regular"
        app:fontWeight="400"/>

    <!-- Normal semibold -->
    <font app:fontStyle="normal"
        app:font="@font/opensans_semibold"
        app:fontWeight="600"/>

    <!-- Normal bold -->
    <font app:fontStyle="normal"
        app:font="@font/opensans_bold"
        app:fontWeight="700"/>

    <!-- Normal extrabold -->
    <font app:fontStyle="normal"
        app:font="@font/opensans_extrabold"
        app:fontWeight="800"/>

    <!-- Italic light -->
    <font app:fontStyle="normal"
        app:font="@font/opensans_lightitalic"
        app:fontWeight="300"/>

    <!-- Italic regular -->
    <font app:fontStyle="normal"
        app:font="@font/opensans_italic"
        app:fontWeight="400"/>

    <!-- Italic semibold -->
    <font app:fontStyle="normal"
        app:font="@font/opensans_semibolditalic"
        app:fontWeight="600"/>

    <!-- Italic bold -->
    <font app:fontStyle="normal"
        app:font="@font/opensans_bolditalic"
        app:fontWeight="700"/>

    <!-- Italic extrabold -->
    <font app:fontStyle="normal"
        app:font="@font/opensans_extrabolditalic"
        app:fontWeight="800"/>

</font-family>