<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/aps_button_inset_horizontal"
    android:insetTop="@dimen/aps_button_inset_vertical"
    android:insetRight="@dimen/aps_button_inset_horizontal"
    android:insetBottom="@dimen/aps_button_inset_vertical">
    <ripple xmlns:android="http://schemas.android.com/apk/res/android"
        android:color="?attr/colorAccent">
        <item>
            <shape>
                <stroke
                    android:width="1dp"
                    android:color="@color/btn_outline_border"/>
                <corners android:radius="@dimen/aps_button_radius"/>
                <padding
                    android:bottom="@dimen/aps_button_padding_vertical"
                    android:left="@dimen/gutterSpaceHalf"
                    android:right="@dimen/gutterSpaceHalf"
                    android:top="@dimen/aps_button_padding_vertical"/>
            </shape>
        </item>
        <item android:id="@android:id/mask">
            <shape>
                <stroke
                    android:width="1dp"
                    android:color="@color/btn_outline_border"/>
                <solid android:color="@android:color/white"/>
                <corners android:radius="@dimen/aps_button_radius"/>
            </shape>
        </item>
    </ripple>
</inset>