<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="@dimen/dtk_button_inset_horizontal"
    android:insetTop="@dimen/dtk_button_inset_vertical"
    android:insetRight="@dimen/dtk_button_inset_horizontal"
    android:insetBottom="@dimen/dtk_button_inset_vertical">

    <shape android:shape="rectangle">
        <corners android:radius="@dimen/dtk_button_radius" />
        <solid android:color="@android:color/white" />

        <padding android:left="@dimen/dtk_button_padding_horizontal"
            android:top="@dimen/dtk_button_padding_vertical"
            android:right="@dimen/dtk_button_padding_horizontal"
            android:bottom="@dimen/dtk_button_padding_vertical" />
    </shape>
</inset>